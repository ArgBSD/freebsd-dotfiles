# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
	output_format = "i3bar"
}

order += "volume master"
order += "disk /"
order += "path_exists VPN"
#order += "wireless _first_"
#order += "ethernet bge0"
order += "ethernet ue0"
order += "battery 0"
order += "load"
order += "tztime local"

#wireless _first_ {
#        format_up = "W: (%quality at %essid) %ip"
#        format_down = "W: down"
#}

ethernet ue0 {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip (%speed)"
        format_down = " down"
}

#ethernet bge0 {
#        # if you use %speed, i3status requires root privileges
#        format_up = " %ip (%speed)"
#        format_down = " down"
#}


battery 0 {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_bat = ""
        status_chr = ""
        status_full = ""
        low_threshold = 30
        threshold_type = percentage
        integer_battery_capacity = true
        color_good = "#0000FF"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/dev/tun0"
	format = "VPN "
	format_down = "VPN "
}

tztime local {
        format = " %H:%M:%S %d/%m/%Y"
}

load {
        format = " %1min"
}

disk "/" {
        format = " %avail"
}

volume master {
        format = " %volume"
        format_muted = " (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
